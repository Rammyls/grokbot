# Top-p nucleus sampling (0.0-1.0). Lower = more focused, Higher = more diverse
LLM_TOP_P=0.9
# Presence penalty (-2.0 to 2.0). Positive values encourage new topics
LLM_PRESENCE_PENALTY=0.1
# Frequency penalty (-2.0 to 2.0). Positive values reduce repetition
LLM_FREQUENCY_PENALTY=0.2
# Max tokens for completion (higher allows longer, more detailed responses)
LLM_MAX_TOKENS=4096